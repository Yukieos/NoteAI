<?xml version="1.0" encoding="utf-8"?>
<!-- 如果想要就是更改具体的这个大小高低设置，可以看看我的comments-->
<!-- 我们主页面的layout，包括sidebar和mainpage-->
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- 主要内容的一个布局，包括topbar，searchbar，tagfilter，note列表，empty状态，fab -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <!-- 最顶部的工具栏，想调整整体高度可以改这个layout_height=56dp -->
        <LinearLayout
            android:id="@+id/topBar"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:background="@color/card_background"
            android:elevation="2dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!--这是打开sidebar侧边栏的按钮，如果要改按钮的点击范围改这个layout_width和padding -->
            <ImageButton
                android:id="@+id/buttonMenu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="菜单"
                android:padding="8dp"
                android:src="@android:drawable/ic_menu_sort_by_size"
                app:tint="@color/primary_text" />

            <!-- 标题的大小直接改textSize=18sp这里 -->
            <TextView
                android:id="@+id/textAppTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:text="所有笔记"
                android:textColor="@color/primary_text"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- 搜索的按钮，如果要改按钮的点击范围改这个layout_width和padding -->
            <ImageButton
                android:id="@+id/buttonSearch"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="搜索"
                android:padding="8dp"
                android:src="@android:drawable/ic_menu_search"
                app:tint="@color/secondary_text" />

            <!-- 取消选择按钮，这个只会在在多选模式显示，如果不想显示就设置visibility="gone" -->
            <ImageButton
                android:id="@+id/buttonCancelSelection"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="取消选择"
                android:padding="8dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:visibility="gone"
                app:tint="@color/secondary_text" />

        </LinearLayout>

        <!-- 搜索框是只有按搜索按钮才会出现的，这个框会覆盖下面笔记，然后具体大小直接改layout_height=44dp这里，margin控制大小和位置，padding控制内边距 -->
        <EditText
            android:id="@+id/inputSearch"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/search_background"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:drawablePadding="8dp"
            android:elevation="4dp"
            android:hint="@string/search_notes"
            android:paddingHorizontal="16dp"
            android:textColor="@color/primary_text"
            android:textColorHint="@color/secondary_text"
            android:textSize="15sp"
            android:singleLine="true"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/topBar" />

        <!-- 标签filter的栏，用户可以点击这些chip来filter笔记，padding调整上下左右留白，app:chipSpacing控制标签间距 -->
        <HorizontalScrollView
            android:id="@+id/scrollTags"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingStart="20dp"
            android:clipToPadding="false"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:scrollbars="none"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/topBar">

            <!-- ChipGroup，添加/修改 app:chipSpacing 可调标签间距 -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupTags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="false" />
        </HorizontalScrollView>

        <!-- grid view, 所有笔记的列表。我想要争个笔记列表有点像database一样的view -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerNotes"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:paddingTop="4dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/scrollTags"
            tools:listitem="@layout/item_note_database" />

        <TextView
            android:id="@+id/textEmpty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:gravity="center"
            android:text="@string/empty_notes"
            android:textColor="@color/secondary_text"
            android:textSize="16sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/recyclerNotes"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/recyclerNotes" />

        <!-- 新建笔记的按钮，要贴边的话layout_margin=24dp 改成12/16dp-->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:contentDescription="@string/add_note"
            app:tint="@color/white"
            app:backgroundTint="@color/accent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@android:drawable/ic_input_add" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- sidebar，layout_width=300dp决定宽度 -->
    <LinearLayout
        android:id="@+id/sidebarContent"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        android:orientation="vertical">


        <!-- sidebar的header，包括app的title和所有笔记的按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="40dp"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NoteAI"
                android:textColor="@color/primary_text"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="所有笔记"
                android:textColor="@color/secondary_text"
                android:textSize="13sp" />

        </LinearLayout>

        <!-- 这个是sidebar和mainpage的分割线 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/search_background" />

        <!-- 笔记列表，显示所有笔记 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerSidebarNotes"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingVertical="8dp" />

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
